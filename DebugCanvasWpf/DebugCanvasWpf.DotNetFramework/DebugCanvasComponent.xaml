<UserControl x:Class="DebugCanvasWpf.DotNetFramework.DebugCanvasComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DebugCanvasWpf.DotNetFramework"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="viewMain" Background="Black">
        <Image x:Name="imgMain" Stretch="None" SizeChanged="imgMain_SizeChanged" Grid.ColumnSpan="2" PreviewMouseMove="imgMain_PreviewMouseMove" PreviewMouseWheel="imgMain_PreviewMouseWheel" PreviewMouseDown="imgMain_PreviewMouseDown" PreviewMouseUp="imgMain_PreviewMouseUp"/>
    </Grid>
</UserControl>
